{
  "compilerOptions": {
    "target": "es2024",
    "module": "NodeNext",
    "isolatedModules": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "sourceMap": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "outDir": "lib",
  },
  "include": [
    "src/*.ts",
  ],
}
