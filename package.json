{
  "name": "marked-extension-template",
  "version": "0.0.0",
  "description": "marked extension template",
  "main": "./lib/index.esm.js",
  "module": "./lib/index.esm.js",
  "browser": "./lib/index.umd.js",
  "type": "module",
  "keywords": [
    "marked",
    "extension"
  ],
  "files": [
    "lib/",
    "src/"
  ],
  "exports": {
    ".": {
      "typescript": "./src/index.ts",
      "types": "./lib/index.d.ts",
      "default": "./lib/index.esm.js"
    }
  },
  "scripts": {
    "build": "npm run build:esbuild && npm run build:types",
    "build:esbuild": "node esbuild.config.js",
    "build:types": "tsc",
    "format": "eslint --fix",
    "lint": "eslint",
    "test": "npm run build:esbuild && node ./spec/test.config.js",
    "test:cover": "npm run build:esbuild && node --experimental-test-coverage ./spec/test.config.js -- --cover",
    "test:only": "npm run build:esbuild && node ./spec/test.config.js -- --only",
    "test:only:update": "npm run build:esbuild && node --test-update-snapshots ./spec/test.config.js -- --only",
    "test:update": "npm run build:esbuild && node --test-update-snapshots ./spec/test.config.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markedjs/marked-extension-template.git"
  },
  "author": "Tony Brix <Tony@Brix.ninja> (https://Tony.Brix.ninja)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/markedjs/marked-extension-template/issues"
  },
  "homepage": "https://github.com/markedjs/marked-extension-template#readme",
  "peerDependencies": {
    "marked": ">=16 <17"
  },
  "devDependencies": {
    "@markedjs/eslint-config": "^1.0.13",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "esbuild": "^0.25.5",
    "esbuild-plugin-umd-wrapper": "^3.0.0",
    "eslint": "^9.30.1",
    "marked": "^16.0.0",
    "semantic-release": "^24.2.6",
    "typescript": "^5.8.3"
  }
}
